        width: 100%;
        position:relative;
        padding:5rem 0;
        margin:5rem 0;
        &__content{
            display: flex;
            flex-direction: column;
            text-align: center;
            gap:5rem;
            justify-content: center;
            align-items: center;
            width: 100%;
            box-sizing: border-box;
            padding:0 1rem;
            margin: 5rem 0;
        }
    }
    .decoration-img{
        position:absolute;
        &.lt{
            top:15%;
            left:10%;
        }
        &.rc{
            top:50%;
            right:0;
            transform: translateY(-50%);
        }
        &.lb{
            bottom:0;
            left:0;
        }
    }
    @media(max-width:767px){
            .decoration-img{
        position:relative;
                &.rc{
            top:50%;
            right:0;
            transform: translateX(100%);
        }
            }
    }
</style>